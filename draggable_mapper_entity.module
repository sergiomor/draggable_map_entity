<?php

/**
 * @file
 * Contains draggable_mapper_entity.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\Core\StringTranslation\TranslatableMarkup;
use Drupal\file\Entity\File;
use Drupal\Component\Utility\NestedArray;

/**
 * Implements hook_help().
 */
function draggable_mapper_entity_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.draggable_mapper_entity':
      $output = '';
      $output .= '<h3>' . \Drupal::translation()->translate('About') . '</h3>';
      $output .= '<p>' . \Drupal::translation()->translate('The Draggable Mapper Entity module provides a custom entity type for creating maps with draggable markers.') . '</p>';
      return $output;
  }
}

/**
 * Implements hook_theme().
 */
function draggable_mapper_entity_theme($existing, $type, $theme, $path) {
  return [
    'draggable_mapper_entity' => [
      'render element' => 'elements',
      'template' => 'draggable-mapper-entity',
    ],
  ];
}

/**
 * Implements hook_inline_entity_form_entity_form_alter().
 */
function draggable_mapper_entity_inline_entity_form_entity_form_alter(&$entity_form, &$form_state) {
  // Only act on draggable_mapper_entity
  if ($entity_form['#entity_type'] != 'draggable_mapper_entity') {
    return;
  }

  // Add the library
  $entity_form['#attached']['library'][] = 'draggable_mapper_entity/mapper';
  
  // Add the preview container
  _draggable_mapper_entity_add_preview_container($entity_form, $form_state);
}

/**
 * Helper function to add the preview container to a form.
 */
function _draggable_mapper_entity_add_preview_container(&$form, $form_state = NULL) {
  // Don't add the container for delete forms or other special forms
  // if (isset($form['#theme']) && in_array($form['#theme'], ['confirm_form'])) {
  //   return;
  // }

  // Check if we have the necessary fields
  if (!isset($form['field_dme_image'])) {
    return;
  }

  // Get image file URL if available
  $image_url = '';
  $image_fid = _draggable_mapper_entity_get_image_fid($form, $form_state, 'field_dme_image');
  
  // If we have a file ID, load the file and get URL
  if ($image_fid) {
    $file = File::load($image_fid);
    if ($file) {
      $file_url_generator = \Drupal::service('file_url_generator');
      $image_url = $file_url_generator->generateString($file->getFileUri());
    }
  }

  // Add the container after the markers fieldset
  $weight = isset($form['field_dme_image']['#weight']) ? $form['field_dme_marker']['#weight'] + 0.5 : 50;
  
  $image_container = '<div class="dme-loading">' . new TranslatableMarkup('The map preview will appear here when a map image is added.') . '</div>';
  
  // If we have an image, create the map preview
  if ($image_url) {
    $image_container = '<div class="dme-image-wrapper">';
    $image_container.= '<img src="' . $image_url . '" alt="Map Image" />';
    $image_container .= '</div>';
  }
   
  $form['dme_preview_container'] = [
    '#type' => 'container',
    '#attributes' => [
      'class' => ['dme-container'],
      'id' => 'dme-container'],
    '#weight' => $weight,
    'preview' => [
      '#type' => 'container',
      'header' => [
        '#type' => 'container',
        'title' => [
          '#type' => 'html_tag',
          '#tag' => 'h4',
          '#value' => new TranslatableMarkup('Map Preview'),
          '#attributes' => ['class' => ['form-item__label']],
        ],
        'instructions' => [
          '#type' => 'html_tag',
          '#tag' => 'div',
          '#value' => new TranslatableMarkup('Drag markers to position map elements.'),
          '#attributes' => ['class' => ['form-item__description']],
        ],
      ],
    ]
  ];

  $form['dme_preview_container']['dme_container_wrapper'] = [
    '#type' => 'container',
    '#attributes' => [
      'id' => 'dme-container-wrapper',
      'class' => ['dme-container-wrapper'],
    ],
  ];

  $form['dme_preview_container']['dme_container_wrapper']['dme_image'] = [
    '#type' => 'container',
    '#attributes' => [
      'class' => ['dme-image'],
      'id' => 'dme-image',
      'role' => 'region',
      'aria-label' => new TranslatableMarkup('Map preview surface')
    ],
    '#markup' => $image_container,
  ];


  $markers = _draggable_mapper_entity_get_marker_data($form, $form_state, 'field_dme_marker');

  if (!empty($markers)) {
    foreach ($markers as $marker) {
      // Initialize marker element variable
      $marker_element = '';
      
      // If the marker has an icon file, display the icon image
      if ($marker['icon_fid']) {
        $icon_url = '';
        // Load the file entity using the file ID
        $file = File::load($marker['icon_fid']);
        if ($file) {
          // Get the file URL generator service
          $file_url_generator = \Drupal::service('file_url_generator');
          // Generate a URL for the file that can be used in the browser
          $icon_url = $file_url_generator->generateString($file->getFileUri());
        }
        // Create an image tag with the icon URL
        $marker_element = '<img src="' . $icon_url . '" alt="Marker Icon" />';
      } else {
        // If no icon is available, use the marker title as fallback
        $marker_element = $marker['title'];
      }

      $marker_html = '<div class="dme-marker-wrapper">';
      $marker_html .= $marker_element;
      $marker_html .= '</div>';
  
      $form['dme_preview_container']['dme_container_wrapper']['dme_marker-' . $marker['index']] = [
        '#type' => 'container',
        '#attributes' => [
          'class' => ['dme-marker'],
          'id' => 'dme-marker-' . $marker['index'],
          'role' => 'application',
          'aria-label' => new TranslatableMarkup('Interactive component positioning interface'),
          'aria-describedby' => 'dme-instructions',
          'aria-live' => 'polite' // Announces changes to screen readers
        ], 
        '#markup' => $marker_html
      ];  
    }
  }

// Accessible instructions
$form['dme_preview_container']['instructions'] = [
  '#type' => 'html_tag',
  '#tag' => 'div',
  '#attributes' => [
    'id' => 'dme-instructions',
    'class' => ['visually-hidden'], // Hidden visually but available to screen readers
  ],
  '#value' => new TranslatableMarkup('Use arrow keys or drag to position elements on the map surface.')
];
  
}

