 * Implements hook_library_info_build().
 */
function draggable_mapper_entity_library_info_build() {
  $libraries = [];
  
  $libraries['mapper'] = [
    'version' => '1.x',
    'css' => [
      'theme' => [
        'css/mapper.css' => [],
      ],
    ],
    'js' => [
      'js/mapper.js' => [],
    ],
    'dependencies' => [
      'core/jquery',
      'core/drupal',
      'core/drupal.once',
      'core/drupalSettings',
